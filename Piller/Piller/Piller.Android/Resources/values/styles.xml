<resources>

  <!-- Base theme applied regardless of API level -->
  <style name="Piller.Android.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- If you are using revision 22.1, use 'windowNoTitle' without 'android:' -->
    <item name="windowNoTitle">true</item>
    <!-- If you're using the toolbar, no need to show ActionBar -->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from https://material.io/guidelines/style/color.html -->
    <!-- As a rule of thumb, colorPrimary should be a 500 value -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
    <item name="colorControlNormal">@color/colorPrimary</item>
    <item name="colorControlActivated">@color/colorPrimaryDark</item>
    <item name="colorControlHighlight">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorPrimaryDark</item>
    <item name="windowActionModeOverlay">false</item>
    <item name="android:fitsSystemWindows">true</item>
  </style>

  <style name="Piller.Android" parent="Piller.Android.Base">
  </style>

  <!--<style name="Piller.Android.ActionBar"
         parent="style/Widget.AppCompat.Light.ActionBar.Solid">
    --><!-- remove shadow below action bar --><!--
    --><!-- <item name="android:elevation">0dp</item> --><!--
    --><!-- Support library compatibility --><!--
    <item name="elevation">0dp</item>
  </style>-->
  
  <!-- Splash Screen Theme. -->
  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  
</resources>